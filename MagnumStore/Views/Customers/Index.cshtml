@model List<MagnumStore.Models.Domain.Customer>  

@{
}

<h1>Customers</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Phone number</th>
            <th>Date of birth</th>
            <th>Gender</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                    <td>@customer.Name</td>
                        <td>@customer.Surname</td>
                            <td>@customer.PhoneNumber</td>
                                <td>@customer.Email</td>
                                    <td>@customer.DateOfBrith.ToString("dd-MM-yyyy")</td>
                                        <td>@customer.Gender</td>
                                            <td><a href="Customers/View/@customer.Id">View</a></td>
            </tr>
        }
    </tbody>
</table>